pkgname=copyq
_realname=CopyQ
pkgver=2.4.8
pkgrel=1
pkgdesc="Clipboard manager with searchable and editable history."
url="https://github.com/hluk/CopyQ"
groups=('tools')
depends=('qt5-3d' 'qt5-base' 'qt5-canvas3d' 'qt5-connectivity' 'qt5-declarative' 'qt5-enginio' 'qt5-graphicaleffects'
         'qt5-imageformats' 'qt5-location' 'qt5-multimedia' 'qt5-quick1' 'qt5-quickcontrols' 'qt5-script' 'qt5-sensors'
         'qt5-svg' 'qt5-tools' 'qt5-translations' 'qt5-webchannel' 'qt5-webengine' 'qt5-webkit' 'qt5-websockets' 
         'qt5-x11extras' 'qt5-xmlpatterns' 'qt5-systems' 'libxtst' 'libxfixes')
makedepends=('cmake')
license=('GPL3')
arch=('i686' 'x86_64')
#source=("https://github.com/hluk/${_realname}/archive/v${pkgver}.tar.gz")
source=("git+http://github.com/hluk/CopyQ.git#commit=23d20db45132a688559cf566702861657d5cf2bd")
md5sums=('SKIP')
install=copyq.install
_allowed_in=('main' 'staging')
build() {
    mkdir "${srcdir}/build"
    cd "${srcdir}/build"
    cmake -DWITH_WEBKIT=1 \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DQT_QMAKE_EXECUTABLE=qmake-qt5 \
        -DWITH_QT5=TRUE \
        "${srcdir}/${_realname}-${pkgver}"
    make
}

package() {
    cd "${srcdir}/build"
    make DESTDIR="${pkgdir}" install
}
