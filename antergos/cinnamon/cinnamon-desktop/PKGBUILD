# Maintainer: Antergos Developers <dev@antergos.com>
# Contributor: Alexandre Filgueira <alexfilgueira@antergos.com>
# Contributor:  Jan de Groot <jan@archlinux.org>

pkgname=cinnamon-desktop
pkgver=3.2.4
pkgrel=1
pkgdesc="Library with common API for various Cinnamon modules"
url="https://github.com/linuxmint/cinnamon-desktop"
arch=(i686 x86_64)
license=(GPL LGPL)
groups=('cinnamon')
depends=('gtk3' 'libxkbfile' 'python2' 'glib2' 'libgsystem' 'libpulse'
		'gobject-introspection' 'python2-gobject')
makedepends=('intltool' 'gnome-common')
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/linuxmint/${pkgname}/archive/${pkgver}.tar.gz"
		'config.patch')
md5sums=('44b6b9da051246afce8dfbb1b1382827'
         '4e82d86d4c008e89c7681279146e4292')


# BEGIN ANTBS METADATA
_is_monitored='True'
_monitored_service='github'
_monitored_type='tags'
_monitored_project='linuxmint'
_monitored_repo='cinnamon-desktop'
# END ANTBS METADATA


prepare() {
	cd "${pkgname}-${pkgver}"

	# Arch uses systemd
	patch -Np1 -i ../config.patch
}

build() {
	cd "${pkgname}-${pkgver}"

	./autogen.sh \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--libexecdir=/usr/lib/"${pkgname}" \
		--disable-static

	make
}

package() {
	cd "${pkgname}-${pkgver}"

	make DESTDIR="${pkgdir}" install
}
 
# -*- mode: bash;-*-
