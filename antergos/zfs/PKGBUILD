# Maintainer: Antergos Developers <dev@antergos.com>
# Contributor: isiachi <isiachi@rhyeworld.it>

pkgname=zfs
pkgver=0.7.1
pkgrel=1
pkgdesc="Kernel modules for the Zettabyte File System."
license=('CDDL')
depends=("spl=${pkgver}" "zfs-utils=${pkgver}" "dkms" "linux-headers" "linux<4.13")
provides=("zfs-dkms=${_pkgver}")
conflicts=("zfs-git" "zfs-dkms")
install=zfs.install
arch=("x86_64")
url="http://zfsonlinux.org/"
_commit=''
_tag='zfs-0.7.1'
source=("https://github.com/zfsonlinux/${pkgname}/archive/${_tag}.zip")
md5sums=('1a2b2fe26c3b0b11fd76c9cfdf6b8da8')

build() {
	cd "${srcdir}/${pkgname}-${_tag}"
	./autogen.sh
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--bindir=/usr/bin \
		--sbindir=/usr/bin \
		--libdir=/usr/lib \
		--datadir=/usr/share \
		--includedir=/usr/include \
		--with-udevdir=/usr/lib/udev \
		--libexecdir=/usr/lib/zfs \
		--with-config=user
	make
}

package() {
	dkmsdir="${pkgdir}/usr/src/zfs-${_pkgver}"
	install -d "${dkmsdir}"

	cp -a "${srcdir}/${pkgname}-${_tag}"/. ${dkmsdir}

	cd "${dkmsdir}"
	./autogen.sh
	scripts/dkms.mkconf -v ${pkgver} -f dkms.conf -n zfs
	chmod g-w,o-w -R .
}
