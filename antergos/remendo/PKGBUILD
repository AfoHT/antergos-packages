# Maintainer: Antergos devs <devs@antergos.com>

pkgname=(remendo)
pkgver=0.1.2
pkgrel=1
pkgdesc="Remendo Antergos warning system"
arch=(x86_64)
url="http://www.antergos.com/"
license=(GPL3)
depends=('systemd' 'polkit' 'glib2>=2.42' 'dbus-glib')
optdepends=('remendo-gtk')
makedepends=('cmake' 'gobject-introspection' 'vala' 'git')
install=remendo.install
source=("${pkgname}-${pkgver}::git://github.com/karasu/remendo")
sha256sums=('SKIP')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}/service
  mkdir -p build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=${pkgdir}/usr -DOPT_DYNAMIC_LIBRARY=TRUE -DCMAKE_BUILD_TYPE=Release ..
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}/service/build"
  install -d "${pkgdir}/usr/bin"
  make INSTALL_ROOT=${pkgdir} install

  install -d "${pkgdir}/etc/dbus-1/system.d"
  install -d "${pkgdir}/usr/share/dbus-1/services"
  install -d "${pkgdir}/usr/share/polkit-1/actions"
  install -d "${pkgdir}/usr/lib/systemd/system/"

  cd "${srcdir}/${pkgname}-${pkgver}/service"
  cp dbus/com.antergos.remendo.conf "${pkgdir}/etc/dbus-1/system.d/"
  cp dbus/com.antergos.remendo.service "${pkgdir}/usr/share/dbus-1/services/"
  cp polkit/com.antergos.remendo.policy "${pkgdir}/usr/share/polkit-1/actions/"
  cp systemd/remendo.service "${pkgdir}/usr/lib/systemd/system/"
}

