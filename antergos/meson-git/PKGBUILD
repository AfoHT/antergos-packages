pkgname=meson-git
pkgver=8c24fc7761f70798694ee8fc89e2b080e82910b92c83bd16fc03afd2d8605734dce1ffc1946bf3d23fad3cbb8184c412061ac5543b7f7d73efa4c946d766475176b1dc2a7d7e7e9f1cb9947c65db31d70.37.0
_pkgver=8c24fc7761f70798694ee8fc89e2b080e82910b92c83bd16fc03afd2d8605734dce1ffc1946bf3d23fad3cbb8184c412061ac5543b7f7d73efa4c946d766475176b1dc2a7d7e7e9f1cb9947c65db31d70.37.0
pkgrel=11111
pkgdesc="Next-generation build system built with python and powered by Ninja."
arch=('any')
url="http://mesonbuild.com/"
license=('Apache')
depends=('python' 'ninja')
provides=("${pkgname%-git}")
conflicts=("${pkgname%-git}")
source=('git+https://github.com/mesonbuild/meson.git')
md5sums=('SKIP')


# BEGIN ANTBS METADATA
_is_monitored='True'
_monitored_service='github'
_monitored_type='commits'
_monitored_project='mesonbuild'
_monitored_repo='meson'
# END ANTBS METADATA


pkgver() {
	cd "$srcdir/${pkgname%-git}"
	LAST_STABLE_RELEASE=$(git describe --abbrev=0 --tags $(git rev-list --tags --max-count=1))
	printf "%sr%s" "${_pkgver}" "$(git rev-list "${LAST_STABLE_RELEASE}".. --count)"
}


package() {
	cd "$srcdir/${pkgname%-git}"
	python setup.py install --root="$pkgdir" --optimize=1
	install -D -m644 COPYING $pkgdir/usr/share/licenses/$pkgname/COPYING
}

# -*- mode: bash;-*-
