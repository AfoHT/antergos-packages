# Maintainer: Antergos Devs <devs@antergos.com>

pkgname=hunspell-de-frami
pkgver=20170112
pkgrel=1
pkgdesc="German (Austria, Germany, Switzerland) spelling dictionaries, hyphenation rules, and thesaurus"
arch=('any')
url="http://www.openoffice.org/de"
license=('GPL2' 'custom')
depends=('hunspell')
source=(http://download.services.openoffice.org/contrib/dictionaries/de_DE_frami.zip)
md5sums=('ebaa2489e42d6a75f51aaa8c06a54784')

package() 
{
    cd ${srcdir}
    bsdtar -xf de_DE_frami.zip
    install -D -m 644 de_DE_frami.aff ${pkgdir}/usr/share/myspell/dicts/de_DE_frami.aff
    install -D -m 644 de_DE_frami.dic ${pkgdir}/usr/share/myspell/dicts/de_DE_frami.dic

    # symlinks are needed    
    install -dm755 ${pkgdir}/usr/share/hunspell
    for file in ${pkgdir}/usr/share/myspell/dicts/*; do
        ln -s /usr/share/myspell/dicts/$(basename $file) ${pkgdir}/usr/share/hunspell/$(basename $file)
    done
}
