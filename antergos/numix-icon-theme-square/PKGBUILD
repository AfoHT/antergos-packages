# Maintainer: Antergos Devs <devs@antergos.com>

pkgname=numix-icon-theme-square
pkgver=0.r83.3bc6d001
pkgrel=1
epoch=1
pkgdesc="Square icon expansion theme from the Numix project"
arch=('any')
url='http://numixproject.org/'
license=('custom')
depends=('numix-icon-theme')
replaces=('numix-icon-theme-square-kde')
conflicts=('numix-icon-theme-square-git')
options=('!strip')
install="${pkgname}.install"
source=('git+http://github.com/numixproject/numix-icon-theme.git')
md5sums=('')


# BEGIN ANTBS METADATA
_is_monitored='True'
_monitored_service='github'
_monitored_type='commits'
_monitored_project='numixproject'
_monitored_repo='numix-icon-theme-square'
# END ANTBS METADATA


pkgver() {
	cd "${srcdir}/${pkgname}"

	printf "0.r83_%s" "$(git rev-list --count HEAD)"
}



package() {
	cd "${srcdir:=$PWD}/${pkgname}"**
	sed -i 's|Inherits=Numix|Inherits=Numix,Adwaita,gnome,hicolor|g' Numix-Square/index.theme
	sed -i 's|Name=Numix Square Light|Name=Numix-Square-Light|g' Numix-Square-Light/index.theme
	sed -i 's|Inherits=Numix-Light|Inherits=Numix-Light,Numix,Adwaita,gnome,hicolor|g' Numix-Square-Light/index.theme
	
	install -dm 755 "${pkgdir}/usr/share/icons"
	cp -dr --no-preserve='ownership' Numix-Square "${pkgdir}/usr/share/icons/"
	cp -dr --no-preserve='ownership' Numix-Square-Light "$pkgdir"/usr/share/icons/

	# License
	install -Dm 644 LICENSE \
	"$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

# -*- mode: bash;-*-
