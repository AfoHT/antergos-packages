# Maintainer: Antergos Developers <dev@antergos.com>

_pkgname=web-greeter
pkgname=web-greeter-next
_pkgver=master
pkgver=3.0.0alpha1
pkgrel=1
pkgdesc='A modern, visually appealing greeter for LightDM.'
arch=('any')
url="https://github.com/antergos/lightdm-webkit2-greeter"
license=('GPL3')
depends=('lightdm' 'python-whither' 'accountsservice' 'antergos-wallpapers')
provides=('lightdm-greeter' 'lightdm-webkit2-greeter')
replaces=('lightdm-webkit2-greeter-next')
backup=("etc/lightdm/${_pkgname}.conf")
source=("${_pkgname}-${_pkgver}.zip::http://github.com/Antergos/lightdm-webkit2-greeter/archive/master.zip")
md5sums=('')
groups=('system')


package() {
	cd "${srcdir}/${_pkgname}-${_pkgver}"

	make \
		DESTDIR="${pkgdir}" \
		background_images_dir=/usr/share/antergos/wallpapers \
		install

	sed -i 's|\/usr\/share\/backgrounds|\/usr\/share\/antergos\/wallpapers|g' \
		"${pkgdir}/etc/lightdm/${_pkgname}.conf" \
		"${pkgdir}/usr/share/web-greeter/themes/default/js/greeter.js"
}

# -*- mode: bash;-*-

