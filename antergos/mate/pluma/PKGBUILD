# Maintainer: Antergos Developers <dev@antergos.com>
# Contributor: Martin Wimpress <code@flexion.org>

pkgname=pluma
pkgver=1.18.0
pkgrel=1
pkgdesc="A powerful text editor for the MATE Desktop"
url="http://mate-desktop.org"
arch=('i686' 'x86_64')
license=('GPL')
depends=('desktop-file-utils' 'enchant' 'gtk3' 'gtksourceview3' 'iso-codes' 'libsm' 'zenity')
makedepends=('wget' 'mate-common' 'yelp-tools' 'python2' 'python3')
optdepends=('yelp: for reading MATE help documents')
groups=('mate-extra')
source=("http://pub.mate-desktop.org/releases/${pkgver::(-2)}/${pkgname}-${pkgver}.tar.xz"
_sha1sums_url="http://pub.mate-desktop.org/releases/${pkgver::(-2)}/SHA1SUMS"
		'http://pkgs.fedoraproject.org/cgit/rpms/pluma.git/plain/pluma_diasable-python-plugins-1.5.patch')
sha1sums=($(wget -q "${_sha1sums_url}" && grep "${pkgname}-${pkgver}.tar.xz" SHA1SUMS | cut -f1))
          '5a8d1ced985fd770d8246a2250bc11b4d10a3c49')


# BEGIN ANTBS METADATA
_autosums='True'
_is_monitored='True'
_monitored_service='mate-desktop'
_monitored_match_pattern='/^\d\.\d[02468]\.\d+$/'
# END ANTBS METADATA

prepare() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	# disable non working python plugins for gtk3
	# patch -Np1 -i ../pluma_diasable-python-plugins-1.5.patch
}

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib/${pkgname} \
		--disable-static \
		--enable-gtk-doc-html \
		--enable-gvfs-metadata \
		--disable-schemas-compile
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	make DESTDIR="${pkgdir}" install
}

# -*- mode: bash;-*-
