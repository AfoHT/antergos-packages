# Maintainer: Antergos Devs <devs@antergos.com>
# AUR Maintainer: Carl George < arch at cgtx dot us >
# contributer: killajoe <archlinux@kamprad.net>

pkgname=gnome-shell-extension-dash-to-panel
_name=dash-to-panel
pkgver=15
pkgrel=1
pkgdesc='Extension for GNOME shell to combine the dash and main panel'
arch=(any)
url="https://github.com/jderose9/dash-to-panel"
license=(GPL2)
makedepends=(git gnome-common intltool)
source=("https://github.com/jderose9/dash-to-panel/archive/v${pkgver}.tar.gz")
sha256sums=('6082bba7cf98d21c409a497de909279f80395669536927029b79220801454e74')

build() {
    cd "${srcdir}/${_name}-${pkgver}"
    make VERSION="$pkgver" _build
}

package() {
    depends=('gnome-shell>=3.18')
    cd "${srcdir}/${_name}-${pkgver}"
    make DESTDIR="$pkgdir" install
}


