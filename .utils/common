#    PACKAGE MAINTAINERS' UTILS 
##
###


_package_group_action() {
	local group _command group_directory

	group="$1"
	_command="$2"
	shift 2

	group_directory="${REPO_DIR}/${group}"

	for pkgdir in "${group_directory}"/*
	do
		[[ -h "${pkgdir}" ]] && continue

		( { cd "${pkgdir}" && "${_command}" "$@"; } || echo "ERROR exit status in ${pkgdir}"; )
	done
}


