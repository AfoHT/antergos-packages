###
##
#    PACKAGE MAINTAINERS' UTILS 
##
###

THIS_DIR=$(dirname $(realpath "${BASH_SOURCE[0]}"))
GIT_ROOT=$(dirname "${THIS_DIR}")
REPO_DIR="${GIT_ROOT}/antergos"

source "${THIS_DIR}/common"


update_checksums() {
	updpkgsums && git clean -x
}

update_pkgver() {
	sed -i -E "s/(pkgver=)([0-9.]+)/\1${1}/g" PKGBUILD
}

search_replace() {
	sed -i -E "s/${1}/${2}/" PKGBUILD
} 

insert_after() {
	sed -i -E "/${1}/a ${2}" PKGBUILD
}

insert_before() {
	sed -i -E "/${1}/i ${2}" PKGBUILD
}


case $1 in

	update-checksums)
		if [[ "$2" =~ ^-g|--group$ ]]; then
			_package_group_action $3 'update_checksums'
		fi

		exit $?
	;;

	update-pkgver)
		if [[ "$2" =~ ^-g|--group$ ]]; then
			_package_group_action $3 'update_pkgver' "$4"
		fi

		exit $?
	;;

	search-replace)
		if [[ "$2" =~ ^-g|--group$ ]]; then
			_package_group_action $3 'search_replace' "$4" "$5"
		fi

		exit $?
	;;

	insert-after)
		if [[ "$2" =~ ^-g|--group$ ]]; then
			_package_group_action $3 'insert_after' "$4" "$5"
		fi

		exit $?
	;;

	insert-before)
		if [[ "$2" =~ ^-g|--group$ ]]; then
			_package_group_action $3 'insert_before' "$4" "$5"
		fi

		exit $?
	;;

	*)
		exit 0
	;;
esac

