#        --with-gtk=2.0 \
#        --disable-static \
#        --disable-python \
#        --enable-locations-compression
#    make

    cd "${srcdir}/${pkgname}-${pkgver}"
    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --with-gtk=3.0 \
        --disable-static \
        --disable-python \
        --enable-locations-compression
    make
}

