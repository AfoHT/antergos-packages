# Maintainer: Antergos Developers <dev@antergos.com>
# Contributor: Martin Wimpress <code@flexion.org>

pkgname=mate-media
pkgver=1.14.0
pkgrel=1
url="http://mate-desktop.org"
pkgdesc="MATE Media Tools (GTK2 version)"
arch=('i686' 'x86_64')
license=('GPL')
depends=('gtk2' 'libcanberra' 'libmatemixer' 'libunique' 'mate-desktop>=1.14')
makedepends=('mate-common')
source=("http://pub.mate-desktop.org/releases/${pkgver::(-2)}/${pkgname}-${pkgver}.tar.xz")
groups=('mate-extra')
replaces=("${pkgname}-gstreamer" "${pkgname}-pulseaudio")
conflicts=("${pkgname}-gtk3" "${pkgname}-gstreamer" "${pkgname}-pulseaudio")
sha1sums=('b3e450859d4b607981182374673fb66c54a1cad1')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib/${pkgname} \
		--localstatedir=/var \
		--with-gtk=2.0 \
		--disable-static
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	make DESTDIR="${pkgdir}" install
}
