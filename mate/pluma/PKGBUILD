# Maintainer: Antergos Developers <dev@antergos.com>
# Contributor: Martin Wimpress <code@flexion.org>

pkgname=pluma
pkgver=1.14.0
pkgrel=2
pkgdesc="A powerful text editor for the MATE Desktop"
url="http://mate-desktop.org"
arch=('i686' 'x86_64')
license=('GPL')
depends=('desktop-file-utils' 'enchant' 'gtk3' 'gtksourceview3' 'iso-codes'
		 'libsm' 'mate-desktop>=1.14' 'python2-gobject' 'zenity')
makedepends=('mate-common' 'yelp-tools')
optdepends=('yelp: for reading MATE help documents')
groups=('mate-extra')
source=("http://pub.mate-desktop.org/releases/${pkgver::(-2)}/${pkgname}-${pkgver}.tar.xz")
md5sums=('8386579dac1e16a4d93dfc5f668a206e')
install=${pkgname}.install

prepare() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	sed -i 's/python/python2/' plugins/externaltools/data/switch-c.tool.in
}

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	PYTHON=/usr/bin/python2 ./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib/${pkgname} \
		--with-gtk=3.0 \
		--enable-gtk-doc=no \
		--enable-python
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	make DESTDIR="${pkgdir}" install
}
 
