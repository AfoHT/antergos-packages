#		--disable-static \
#		--disable-schemas-compile \
#		--enable-gtk-doc
#	make

	cd "${srcdir}/${pkgname}-${pkgver}"
	./configure \
		--prefix=/usr \
		--with-gtk=3.0 \
		--disable-static \
		--disable-schemas-compile \
		--enable-gtk-doc
	make
}

