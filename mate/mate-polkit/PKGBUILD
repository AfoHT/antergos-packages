	cd "${pkgname}-${pkgver}"
	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib/${pkgbase} \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--with-gtk=3.0 \
		--enable-introspection \
		--disable-static
	make
}

