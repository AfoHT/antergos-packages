do_antergos_setup() {
	if [[ -n "${SUDO_USER}" ]]; then
		_ANT_USER="${SUDO_USER}"
	elif [[ -n "${HOME}" ]]; then
		_ANT_USER="${HOME#/home/}"
	else
		echo "Error: Unable to determine current user."
		exit 1
	fi
	
	[[ -n "${_ANT_USER}" ]] && /usr/bin/antergos-kde-setup "${_ANT_USER}" "${1}"
}

post_install() {
	do_antergos_setup
}

post_upgrade() {
	do_antergos_setup 'no-overwrite'
}
